#include <iostream>
using namespace std;
const int SIZE=4;
double sumMajorDiagonal(const double m[][SIZE]);
int main() {
    double m[SIZE][SIZE];
    cout<<"Enter matrix elements\n";
    for (int i = 0; i < SIZE; i++) {
        for (int j = 0; j < SIZE; j++) {
            cin >> m[i][j];
        }
    }
    cout<<"major sum is: "<<sumMajorDiagonal(m);
}
double sumMajorDiagonal(const double m[][SIZE]) {
    double sum = 0;
    for (int i = 0; i < SIZE; i++) {
        sum += m[i][i];
    }
    return sum;
}
