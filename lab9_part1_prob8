#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>

using namespace std;

int main() {
    int n;
    cin >> n;

    if (n <= 0) {
        cout << "Minimum=N/A" << endl;
        cout << "Maximum=N/A" << endl;
        cout << "Average=N/A" << endl;
        return 0;
    }

    vector<int> grades(n);
    long long sum = 0;
    int minimum = 101; 
    int maximum = -1;

    for (int i = 0; i < n; ++i) {
        cin >> grades[i];
        sum += grades[i];
        minimum = min(minimum, grades[i]);
        maximum = max(maximum, grades[i]);
    }

    double average = (double)sum / n;

    // Manual one-decimal place formatting
    // Multiply by 10, add 0.5 for rounding, cast to long long
    long long temp = (long long)(average * 10.0 + 0.5);
    long long integerPart = temp / 10;
    long long fractionalPart = temp % 10;

    cout << "Minimum=" << minimum << endl;
    cout << "Maximum=" << maximum << endl;
    cout << "Average=" << integerPart << "." << fractionalPart << endl;

    return 0;
}
